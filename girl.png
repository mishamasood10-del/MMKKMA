<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<title>For my cute little baby</title>

<!-- fonts -->
<link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">

<style>
body{
    margin:0;
    overflow:hidden;
    background:#fff7f9;
}

/* ---------- SLIDES ---------- */
.slide{
    height:100vh;
    width:100vw;
    display:none;
    flex-direction:column;
    justify-content:center;
    align-items:center;
    padding:30px;
    text-align:center;
}
.active{display:flex;}

/* soft pastel gradients */
.p1{background:linear-gradient(135deg,#fff1f5,#ffe5ec);}
.p2{background:linear-gradient(135deg,#fef6ff,#f3e8ff);}
.p3{background:linear-gradient(135deg,#fff8e7,#ffe4b5);}
.p4{background:linear-gradient(135deg,#eafaf1,#d4f4dd);}
.p5{background:linear-gradient(135deg,#fcefee,#f8dcdc);}

/* fonts */
.heading{
    font-family:"Great Vibes", cursive;
    font-size:42px;
    color:#8b3a62;
}

.msg{
    font-family:"Times New Roman", serif;
    font-size:20px;
    color:#3b3b3b;
    max-width:320px;
    margin-top:15px;
}

/* buttons */
button{
    padding:12px 24px;
    border-radius:25px;
    border:none;
    font-weight:bold;
    background:#ff6b81;
    color:white;
    margin:10px;
}

/* ---------- CHARACTER + BUBBLE ---------- */
.characterWrap{
    position:relative;
    margin-top:20px;
}

.character{
    width:130px;
}

.bubble{
    position:absolute;
    left:110%;
    top:20%;
    background:white;
    color:black;
    padding:10px 14px;
    border-radius:12px;
    font-size:14px;
    display:none;
}

/* ---------- CONFETTI ---------- */
.confetti{
    position:fixed;
    width:10px;
    height:10px;
    animation:fall 3s linear infinite;
}
@keyframes fall{
    from{transform:translateY(-10vh) rotate(0deg);}
    to{transform:translateY(100vh) rotate(360deg);}
}

/* runaway button */
#no{position:absolute;}
</style>
</head>

<body>

<!-- ---------- 0 WELCOME ---------- -->
<div class="slide active p1">
    <h1 class="heading">For my cute little baby</h1>
    <button onclick="next()">Open</button>
</div>


<!-- ---------- 1 VALENTINE QUESTION ---------- -->
<div class="slide p2">
    <h2 class="heading">Will you be my Valentine?</h2>

    <button onclick="next()">Yes</button>
    <button id="no">No</button>

    <div class="characterWrap">
        <!-- REPLACE THIS IMAGE WITH YOUR CHARACTER -->
        <img src="girl.png" class="character">
        <div class="bubble" id="bubble">Choose Yes ??</div>
    </div>
</div>


<!-- ---------- 2 CELEBRATION ---------- -->
<div class="slide p3">
    <h1 class="heading">YAYAYAYAY</h1>
    <button onclick="next()">Continue</button>
</div>


<!-- ---------- DAY TEMPLATE FUNCTION ---------- -->
<script>
const days=[
"Happy Rose Day My Love ??",
"Happy Proposal Day ??",
"Happy Chocolate Day ??",
"Happy Teddy Day ??",
"Happy Promise Day ??",
"Happy Hug Day ??",
"Happy Kiss Day ??",
"Happy Valentine’s Day ??"
];

days.forEach((title,i)=>{
document.write(`
<div class="slide p4">
<h2 class="heading">${title}</h2>
<button onclick="openWish(this)">Open</button>
</div>

<div class="slide p5">
<p class="msg">WRITE YOUR MESSAGE HERE</p>
<button onclick="prev()">Back</button>
<button onclick="next()">Continue</button>
</div>
`);
});
</script>


<script>
let slides=document.querySelectorAll(".slide");
let current=0;

function show(n){
    slides[current].classList.remove("active");
    current=n;
    slides[current].classList.add("active");

    if(current===2) startConfetti();
}

function next(){show(current+1);}
function prev(){show(current-1);}

/* open -> go to next */
function openWish(btn){ next(); }

/* runaway NO */
let no=document.getElementById("no");
let bubble=document.getElementById("bubble");

no.addEventListener("mouseover",()=>{
    no.style.left=Math.random()*70+"vw";
    no.style.top=Math.random()*70+"vh";
    bubble.style.display="block";
});

/* real confetti burst */
function startConfetti(){
    for(let i=0;i<80;i++){
        let c=document.createElement("div");
        c.className="confetti";
        c.style.left=Math.random()*100+"vw";
        c.style.background=`hsl(${Math.random()*360},80%,60%)`;
        document.body.appendChild(c);
        setTimeout(()=>c.remove(),3000);
    }
}
</script>

</body>
</html>
